{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}


    <div class="flex justify-center mt-64">
        <div class="flex-column">
            <form class="bg-[#163853] rounded-xl py-2 px-4" method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <h1 class="font-bold text-center text-white">Veuillez vous connecter</h1>
                <div class="my-2">
                    <label for="inputEmail"><p class="text-white font-bold">Email</p></label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                </div>

                <div class="mb-2">
                    <label for="inputPassword"><p class="text-white font-bold">Mot de passe</p></label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                </div>



                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
                <div class="flex justify-center">
                    <button class="text-white font-bold" type="submit">
                        Se connecter
                    </button>
                </div>
               
            </form>
        </div>
    </div>

    
{% endblock %}
