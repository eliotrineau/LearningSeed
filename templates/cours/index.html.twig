{% extends 'base.html.twig' %}

{% block title %}Cours{% endblock %}

{% block body %}
    <div class="flex justify-center">
        <h1 class="font-bold text-white rounded-xl py-1 my-4 px-2 bg-[#163853]">Liste des cours :</h1>
    </div>
    {% for cour in cours %}
        <div class="my-8">
            <a href="{{ path('app_cours_show', {'id': cour.id}) }}">
            <div class="flex justify-center mx-auto h-[350px] w-[400px] border-4 border-[#163853] rounded-lg overflow-hidden group text-white">
                <img class="h-full w-full scale-[1.4] group-hover:scale-150 bg-[#163853] transition duration-300 ease-in-out object-contain" src={{asset('media/coursIcon.png')}}>
                <p class="absolute self-end pb-20 text-2xl drop-shadow-2xl">{{cour.matiere}}</p>
                <p class="absolute self-end pb-12 text-2xl drop-shadow-2xl">{{cour.nom}}</p>
                <p class="absolute self-end pb-4 text-2xl drop-shadow-2xl">{{cour.difficulte}}
                    {% if app.user.niveau ==  cour.difficulte %}
                        : conseill√©
                    {% endif %}
                </p>
            </div>
            </a>
        </div>
    {% endfor %}

{% endblock %}
