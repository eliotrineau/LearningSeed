{% extends 'base.html.twig' %}

{% block title %}Forum index{% endblock %}

{% block body %}

    <div class="flex justify-center mt-12">
        <div class="flex-column py-2 px-4 bg-[#163853] rounded-xl">
            <h1 class="font-bold text-white border-b mb-4">Fil de discussion</h1>
            {% for forum in forums %}
                <p class="text-white bg-zinc-500 rounded-xl mb-2 py-0.5 px-1 text-center">{{forum.message}}</p>
                {% else %}
                    <p class="font-bold text-white">Il n'y a encore aucun message publi√© !</p>
            {% endfor %}
        </div>
    </div>
    <div class="flex justify-center mt-4">
        <a class="text-white rounded-xl bg-[#163853] py-1 px-2" href="{{ path('app_gestion_forum_new') }}">Nouveau message</a>
    </div>

{% endblock %}
